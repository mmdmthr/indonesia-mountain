---
import "../styles/global.css"
import "../styles/navbar.css"
import ThemeToggle from "../components/ThemeToggle.jsx"
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Nama-nama gunung di Indonesia,lokasi dan ketinggiannya.">
    <meta name="google-site-verification" content="nh2jnkmb60HsSF6-mzod5B4ULrGtOpfefhM7i1EIjXk" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <title>Gunung Nusantara</title>
    
    <!-- Dark mode initialization script -->
    <script is:inline>
      // On page load or when changing themes, best to add inline in `head` to avoid FOUC
      document.documentElement.classList.toggle(
        "dark",
        localStorage.theme === "dark" ||
          (!("theme" in localStorage) && window.matchMedia("(prefers-color-scheme: dark)").matches),
      );
    </script>
  </head>
  <body class="font-sans bg-zinc-100 dark:bg-teal-950 text-gray-900 dark:text-gray-100 transition-colors">
    <div class="max-w-screen-xl mx-auto py-8 px-4 sm:px-6 lg:px-8 lg:py-8">
        <!-- Theme Toggle - Fixed Position Top Right -->
        <div class="fixed top-4 right-4 z-50">
          <ThemeToggle client:load />
        </div>
        
        <div class="min-h-screen bg-zinc-100 dark:bg-teal-950 text-gray-900 dark:text-gray-100 px-4 py-6 font-sans transition-colors">
          <div class="max-w-2xl w-full mx-auto px-4 sm:px-6 py-6 sm:py-6 text-center">
            <h2 class="text-3xl leading-9 font-extrabold tracking-tight sm:text-4xl text-gray-900 dark:text-gray-100 mb-4">
                  <a href="/" class="hover:text-teal-300 dark:hover:text-teal-400 transition-colors">
                    ⛰️ Gunung Nusantara
                  </a>
            </h2>
            <nav>
              <ul>
                <li>
                  <a href="/" class="text-gray-900 hover:text-zinc-800 dark:text-gray-100 dark:hover:text-teal-400 transition-colors">
                    <i class="fas fa-home"></i> Home
                  </a>
                </li>
                <li>
                  <a href="/articles" class="text-gray-900 dark:text-gray-100 hover:text-teal-300 dark:hover:text-teal-400 transition-colors">
                    <i class="fas fa-clipboard-list"></i> Artikel
                  </a>
                </li>
                <li>
                  <a href="https://github.com/mmdmthr/indonesia-mountain" target="_blank" class="text-gray-900 dark:text-gray-100 hover:text-teal-300 dark:hover:text-teal-400 transition-colors">
                    <i class="fab fa-github"></i> GitHub
                  </a>
                </li>
              </ul>
            </nav>
          </div>
          <div class="max-w-2xl w-full mx-auto px-4 sm:px-6">
            <slot />
          </div>
        </div>
    </div>
  </body>
</html>
